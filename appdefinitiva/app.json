{
  "expo": {
    "name": "appdefinitiva",
    "slug": "appdefinitiva",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "appdefinitiva",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mimero.appdefinitiva",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSMotionUsageDescription": "This app requires access to motion sensors for enhanced user experience.",
        "UIViewControllerBasedStatusBarAppearance": true,
        "UIRequiresFullScreen": true
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACTIVITY_RECOGNITION"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.mimero.appdefinitiva"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "00fec596-3268-492b-8de1-39015c06ac08"
      }
    }
  }
}
